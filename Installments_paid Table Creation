-- Creating INSTALLMENTS_PAID table
CREATE TABLE HR.INSTALLMENTS_PAID
(
  INSTALLMENT_ID    NUMBER(10),
  CONTRACT_ID       NUMBER(5),
  INSTALLMET_DATE   DATE,
  INSTALLEMENT_AMT  NUMBER(10,2),
  PAID              NUMBER(2)
);
-- Adding constraints to INSTALLMENTS_PAID table
ALTER TABLE HR.INSTALLMENTS_PAID ADD CONSTRAINT INSTALLMENTS_PAID_PK
 PRIMARY KEY (INSTALLMENT_ID);

ALTER TABLE installments_paid ADD CONSTRAINT fk_install_contract
    FOREIGN KEY (CONTRACT_ID)
    REFERENCES contracts (CONTRACT_ID);
